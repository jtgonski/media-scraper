
<div class="row">
	<div class="col-md-8">
		<h3><a href={{link}} target="_blank">{{title}}</a></h3>
		<div>
			{{teaser}}
		</div>
	</div>

	<div class="col-md-4">
			{{#unless saved}}
				<button class="btn btn-primary" class="save-article" data-id={{_id}}>{{_id}}</button>
			{{/unless}}
			{{#if saved}}
				<button class="btn btn-primary" id="add-note" data-toggle="modal" data-target="#add-note-modal">Add Note</button>
			{{/if}}

			<p>{{note}}</p>

		<!-- <button class="btn btn-primary" id="view-note" data-toggle="modal" data-target="#view-note-modal">View Note</button> -->
	</div>

	<div class="modal fade" id="add-note-modal" tabindex="-1" role="dialog">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Add a Note</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<form>
						<div class="form-group">
							<input id="note-title" class="form-control" type="text" placeholder="Note Title">
							<textarea class="form-control" id="note-body" rows="3"></textarea>
						</div>
					</form>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-primary" id="save-note" data-id={{_id}} data-dismiss="modal">Save changes</button>
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>

